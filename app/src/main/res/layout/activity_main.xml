<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mark.baselibrary.widget.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:left_image="@mipmap/ic_launcher"
        app:right_image="@mipmap/ic_launcher"
        app:title_bg="@color/black"
        app:title_text_color="@android:color/holo_green_light"
        app:title_text_size="14sp"/>

    <FrameLayout
        android:id="@+id/id_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.yinglan.alphatabs.AlphaTabsIndicator
        android:id="@+id/alphaIndicator"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:badgeBackgroundColor="@android:color/holo_red_dark"
            app:paddingTexwithIcon="2dp"
            app:tabIconNormal="@mipmap/ic_launcher"
            app:tabIconSelected="@mipmap/ic_launcher_round"
            app:tabText="栏目1"
            app:tabTextSize="14sp"
            app:textColorNormal="@color/black"
            app:textColorSelected="@color/colorPrimaryDark"/>

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:badgeBackgroundColor="@android:color/holo_red_dark"
            app:paddingTexwithIcon="-2dp"
            app:tabIconNormal="@mipmap/ic_launcher"
            app:tabIconSelected="@mipmap/ic_launcher_round"
            app:tabText="栏目2"
            app:tabTextSize="14sp"
            app:textColorNormal="@color/black"
            app:textColorSelected="@color/colorPrimaryDark"/>
    </com.yinglan.alphatabs.AlphaTabsIndicator>
</LinearLayout>